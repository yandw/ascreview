{
  "manifest_version": 3,
  "name": "VS Work Item Query Helper",
  "version": "1.0",
  "description": "一个用于Visual Studio工作项查询页面的辅助工具",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://msasg.visualstudio.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [{
    "matches": ["https://msasg.visualstudio.com/*"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}