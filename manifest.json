{
  "manifest_version": 2,
  "name": "Azure DevOps Work Item Helper",
  "version": "1.0",
  "description": "用于Azure DevOps工作项页面的辅助工具",
  "permissions": [
    "activeTab",
    "*://msasg.visualstudio.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://msasg.visualstudio.com/*"],
    "js": ["content.js"]
  }],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}