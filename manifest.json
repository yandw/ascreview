{
  "manifest_version": 3,
  "name": "App Store Comment",
  "version": "1.0.0",
  "description": "A browser extension to scrape comments from App Store.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://apps.apple.com/*"],
      "js": ["content.js"]
    }
  ]
}